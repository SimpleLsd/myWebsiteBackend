extends layout

block content
  h1= title
  table
    tr
      th Date
      th Num
      th Title
      th Desc
      th Abstract
      th CoverLink
      th Tags
    each val in data
      tr
        td= val.date
        td= val.num
        td= val.title
        td= val.desc
        td= val.abstract
        //- td= href=val.coverLink
        td
          a(href=val.coverLink target="_blank") 
            img(src=val.coverLink, alt="图片链接失效")
        td= val.tags

    form(action="/edit/indexArticlesInsert", method="post", enctype="multipart/form-data")    
      tr
        td now
        td
          input(type="number", name="number")
        td
          input(type="text", name="title")
        td
          input(type="text", name="description")
        td
          input(type="text", name="abstract")
        td
          input(type="file", name="cover")
        td
          span tag1
            input(type="checkbox", name="tags" value="tag1")
          span tag2
            input(type="checkbox", name="tags" value="tag2")
          span tag3
            input(type="checkbox", name="tags" value="tag3")
          span tag4
            input(type="checkbox", name="tags" value="tag4")
        td
          input(type="submit")


